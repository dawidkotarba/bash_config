ping-host(){
 ping -c 1 $1 &> /dev/null && return 0 || return 1
}

create-folder(){
 local destination=$1
 local destination_rights=$2

 if [ ! -d "$destination" ]; then
   echo "Folder $destination is not present. Creating a folder..."
   mkdir $destination
   chmod $destination_rights $destination
   echo "Folder created."
 fi
}

count-file-lines(){
 local filePath=$1
 return `cat $filePath | wc -l`
}

ssmtp_send_email(){
 {
    echo To: $1
    echo Subject: $2
    echo
    $3
 } | ssmtp $1
}

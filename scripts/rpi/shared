ping-host(){
 ping -c 1 $1 &> /dev/null && echo 1 || echo 0
}

create-folder() {
 local destination=$1
 local destination_rights=$2

 if [ ! -d "$destination" ]; then
   echo "Folder $destination is not present. Creating a folder..."
   mkdir $destination
   chmod $destination_rights $destination
   echo "Folder created."
 fi
}

count-file-lines() {
 local filePath=$1
 return `cat $filePath | wc -l`
}